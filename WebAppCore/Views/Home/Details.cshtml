@model Person

@{
    ViewBag.Title = "Details";
    var photoPath = "~/Images/" + (Model.PhotoPath ?? "images.jpg");
}
<h4>Detail Person</h4>
<hr />

<div class="row justify-content-center" m-3>
    <div class="col-sm-8">
        <div class="card m-3">
            <div class="card-header">
                <h3>@Model.FirstName @Model.LastName</h3>
            </div>
            
            @*<img src="@photoPath" class="card-img-top align-items-md-center imageSizeForDetails" asp-append-version="true" />*@
            
            <div class="card-body text-center">     
                <img src="@photoPath" class="card-img-top align-items-md-center imageSizeForDetails" asp-append-version="true" />
                <h5>FirstName: @Model.FirstName</h5>
                <h5>LastName:  @Model.LastName</h5>
                <h5>Age:       @Model.Age</h5>
            </div>
        </div>
        <hr />
        <a class="btn btn-secondary" asp-action="Index">Back</a>
    </div>
</div>