@model PersonUpdateViewModel

@{
    ViewBag.Title = "Update Person";
    var photoPath = "~/Images/" + (Model.ExistingPhotoPath ?? "human.jpg");
}

    <form enctype="multipart/form-data" asp-controller="Home" asp-action="Update" method="post" class="mt-3">
        <input type="hidden" name="Id" value="@Model.Id" />
        <input type="hidden" name="ExistingPhotoPath" value="@Model.ExistingPhotoPath" />
        <div class="form-group" row>
            <b><label asp-for="FirstName" class="col-sm-2 col-form-label"></label></b>
            <div class="col-sm-10">
                <input asp-for="FirstName" class="form-control" placeholder="FirstName" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group" row>
            <b>
                <label asp-for="LastName" class="col-sm-2 col-form-label"></label>
            </b>
            <div class="col-sm-10">
                <input asp-for="LastName" class="form-control" placeholder="Lastname" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group" row>
            <b>
                <label asp-for="Age" class="col-sm-2 col-form-label"></label>
            </b>
            <div class="col-sm-10">
                <input asp-for="Age" class="form-control" placeholder="Age" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group" row>
            <b>
                <label asp-for="Age" class="col-sm-2 col-form-label"></label>
            </b>
            <div class="col-sm-10">
                <div class="custom-file">
                    <input asp-for="Photo" class="form-control custom-file-input" />
                    <label class="custom-file-label">Replace file...</label>
                </div>
            </div>
        </div>

        <div class="form-group" row>
            <img src="@photoPath" class="imageSize" asp-append-version="true" />
        </div>

        <div class="form-group">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Update</button> |
                <a class="btn btn-secondary align-self-lg-start" asp-controller="Home" asp-action="Index">Back</a>
            </div>
            @section Scripts {
                <script>
                    $(document).ready(function () {
                        $(".custom-file-input").on("change", function () {
                            var fileName = $(this).val().split("\\").pop();
                            $(this).next('.custom-file-label').html(fileName);
                        });
                    });
                </script>
            }
        </div>
    </form>

